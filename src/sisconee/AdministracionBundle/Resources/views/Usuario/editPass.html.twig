{% extends 'sisconeeAdministracionBundle:Default:layout_admin.html.twig' %}


{% block content %}

    {{ form_start(edit_form) }}

    {{ form_row(edit_form.oldPass) }}
    {{ form_row(edit_form.newPass) }}


    <div class="form-actions">
        <div class="jqplot-error-message">
            {{ form_errors(form.newPass) }}
        </div>
        {{ form_widget(edit_form.submit) }}

        <a class="btn btn-danger" href="{{ path('administracion_usuario') }}">Cancelar</a>

    </div>

    {{ form_row(edit_form._token) }}


    {{ form_end(edit_form, {'render_rest':false}) }}
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('layoutadmin/admin-list.js') }}"></script>
    <script src="{{ asset('jquery/jquery-validate/jquery.validate.js') }}"></script>
    <script src="{{ asset('jquery/jquery.js') }}"></script>
{% endblock %}




